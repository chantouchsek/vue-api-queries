{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "lib": ["ES5", "ES6", "ES2015", "ES2016", "ES2017", "ES2018", "ESNext", "DOM"],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "types": [
      "@types/node",
      "@nuxt/types",
      "axios",
      "axios-mock-adapter",
      "@types/qs",
      "@types/lodash",
      "vitest/globals"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*", "coverage"]
}
